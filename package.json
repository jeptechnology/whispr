{
  "name": "whispr",
  "version": "1.0.0",
  "description": "Wiser Home Integrated Support Package Reader",
  "main": "main.js",
  "build": {
    "appId": "com.jeptechnology.whispr",
    "productName": "WhispR",
    "mac": {
      "category": "public.app-category.lifestyle"
    },
    "dmg": {
      "icon": false
    },
    "linux": {
      "target": [
        "AppImage"
      ],
      "category": "Office"
    }
  },
  "dependencies": {
    "decompress": "^4.2.1",
    "decompress-targz": "^4.1.1",
    "electron-squirrel-startup": "^1.0.1",
    "express": "^4.21.0",
    "multer": "^1.4.5-lts.1"
  },
  "scripts:": {
    "postinstall": "electron-builder install-app-deps",
    "build": "electron-builder --mac --windows --linux",
    "release": "electron-builder --mac --windows --linux --publish always"
  },
  "author": "James Parker",
  "license": "MIT",
  "devDependencies": {
    "@electron/fuses": "^1.8.0",
    "electron": "^32.1.2",
    "electron-builder": "^25.0.5",
    "electron-updater": "^6.3.4",
    "rpmbuild": "^0.0.23"
  }
}
